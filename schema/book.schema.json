{
  "type": "object",
  "properties": {
    "id": {
      "type": "integer",
      "minimum": 1
    },
    "bookTypeId": {
      "type": "integer",
      "minimum": 1,
      "maximum": 3
    },
    "bookCategoryId": {
      "type": "integer",
      "minimum": 1,
      "maximum": 6
    },
    "title": {
      "oneOf": [
        {
          "type": "string",
          "faker": {
            "fake": "{{commerce.productName}}"
          }
        },
        {
          "type": "string",
          "faker": {
            "lorem.words": [3]
          }
        },
        {
          "type": "string",
          "faker": {
            "lorem.words": [5]
          }
        }
      ]
    },
    "author": {
      "type": "string",
      "faker": "name.findName"
    },
    "description": {
      "type": "string",
      "faker": {
        "lorem.paragraphs": [2]
      }
    },
    "press": {
      "type": "string",
      "faker": {
        "fake": "{{company.catchPhraseNoun}} Press"
      }
    },
    "barcode": {
      "type": "string",
      "faker": {
        "fake": "{{random.number}}-{{random.number}}-{{random.number}}"
      }
    },
    "borrowed": {
      "type": "boolean"
    }
  },
  "required": [
    "id",
    "bookTypeId",
    "bookCategoryId",
    "title",
    "author",
    "description",
    "press",
    "barcode",
    "borrowed"
  ]
}