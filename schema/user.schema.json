{
  "type": "object",
  "properties": {
    "id": {
      "type": "integer",
      "minimum": 1
    },
    "departmentId": {
      "type": "integer",
      "minimum": 1,
      "maximum": 6
    },
    "firstName": {
      "type": "string",
      "faker": "name.firstName"
    },
    "lastName": {
      "type": "string",
      "faker": "name.firstName"
    },
    "title": {
      "type": "string",
      "faker": "name.jobTitle"
    },
    "age": {
      "type": "integer",
      "minimum": 35,
      "maximum": 75
    },
    "email": {
      "type": "string",
      "faker": "internet.email"
    },
    "salary": {
      "type": "number",
      "faker": {
        "random.number": {
          "min": 1000,
          "max": 10000,
          "precision": 0.1
        }
      }
    },
    "addresses": {
      "type": "array",
      "minItems": 1,
      "maxItems": 3,
      "items": {
        "type": "object",
        "properties": {
          "street": {
            "type": "string",
            "faker": "address.streetAddress"
          },
          "city": {
            "type": "string",
            "faker": "address.city"
          },
          "country": {
            "type": "string",
            "faker": "address.country"
          }
        },
        "required": [
          "street",
          "city",
          "country"
        ]
      }
    },
    "bio": {
      "type": "string",
      "faker": {
        "lorem.paragraphs": [3]
      }
    },
    "hiredAt": {
      "faker": {
        "date.between": ["1990-01-01", "2012-12-29"]
      }
    },
    "expiresAt": {
      "oneOf": [
        {
          "faker": "date.future"
        },
        {
          "faker": "date.recent"
        },
        {
          "faker": "date.past"
        }
      ]
    },
    "retiresAt": {
      "oneOf": [
        {
          "faker": "date.future"
        },
        {
          "faker": "date.recent"
        },
        {
          "faker": "date.past"
        }
      ]
    }
  },
  "required": [
    "id",
    "departmentId",
    "firstName",
    "lastName",
    "title",
    "age",
    "salary",
    "email",
    "addresses",
    "bio",
    "hiredAt",
    "expiresAt"
  ]
}